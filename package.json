{
	"name": "cynosure",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "pnpm build-dev && run-p run:chrome watch-vite watch-service-worker watch-content-css watch-content-script vite-dev",
		"build": "pnpm build-vite && pnpm build-content-script --minify && pnpm build-service-worker --minify && pnpm build-content-css --minify",
		"build-dev": "pnpm build-vite --mode development && pnpm build-content-script && pnpm build-service-worker && pnpm build-content-css",
		"build-vite": "vite build",
		"build-service-worker": "esbuild src/extension/service-worker.ts --bundle --outdir=build/extension",
		"build-content-script": "esbuild src/extension/content.ts --bundle --outdir=build/extension",
		"build-content-css": "esbuild src/extension/content.css --bundle --outdir=build/extension",
		"vite-dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/chrome": "^0.0.263",
		"autoprefixer": "^10.4.18",
		"esbuild": "^0.20.2",
		"postcss": "^8.4.35",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"sveltekit-adapter-chrome-extension": "^2.0.0",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"web-ext": "^7.11.0"
	},
	"type": "module",
	"dependencies": {
		"@supabase/supabase-js": "^2.39.8",
		"fastembed": "^1.14.1",
		"svelte-persisted-store": "^0.9.1"
	}
}
